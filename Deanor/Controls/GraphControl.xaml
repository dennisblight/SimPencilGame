<UserControl x:Class="Deanor.Controls.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deanor.Controls"
             mc:Ignorable="d"
             
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"
          MouseMove="Grid_MouseMove"
          MouseLeftButtonUp="Grid_MouseLeftButtonUp"
          Background="{Binding Background, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
          >
        <Canvas x:Name="canvas" VerticalAlignment="Center" HorizontalAlignment="Center">
        </Canvas>
    </Grid>
</UserControl>
