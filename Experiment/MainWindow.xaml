<Window x:Class="Experiment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experiment"
        xmlns:l="clr-namespace:Experiment.Pages"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="GreyTileImageBrush"
                    ImageSource="Assets/grey-tile-texture.png"
                    Viewport="0 0 200 200" ViewportUnits="Absolute"
                    Stretch="None" TileMode="Tile" />
        <ImageBrush x:Key="ChalkTileImageBrush"
                    ImageSource="Assets/chalk_texture.jpg"
                    Viewport="0 0 150 150" ViewportUnits="Absolute"
                    Stretch="None" TileMode="Tile" />
    </Window.Resources>
    <Grid x:Name="mainGrid">
        
    </Grid>
</Window>
